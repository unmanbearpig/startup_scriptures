%nav.navbar.navbar-default{role: 'navigation'}
  .container-fluid
    .navbar-header
      %button.navbar-toggle{type: 'button', 'data-toggle' => 'collapse', 'data-target' => '#main-navbar-collapse'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: root_path} Startup Scriptures
    .collapse.navbar-collapse
      #main-navbar-collapse
        = render 'layouts/search_field'

        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li
              %a{href: reading_list_path} Reading list
            %li
              %a{href: '#'}
                = current_user.email
                - if current_user.is_admin
                  (Admin)
          %li
            = render 'layouts/log_in_link'
