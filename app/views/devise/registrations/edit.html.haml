= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f|
  = f.form_group do
    %h1
      Edit Profile

  = devise_error_messages!
  = f.email_field :email, autofocus: true
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  = f.password_field :password, autocomplete: "off"
  = f.password_field :password_confirmation, autocomplete: "off"
  = f.password_field :current_password, autocomplete: "off"
  = f.form_group do
    = f.submit "Update"

-# = bootstrap_form_tag url: '#', layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10" do |f|
  = f.form_group do
    %h3 Cancel my account
    %p
      Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger'}
    = link_to "Back", :back
